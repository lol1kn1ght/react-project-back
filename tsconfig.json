{
  "compilerOptions": {
    "target": "es5",
    "lib": [],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "baseUrl": "src",
    "paths": {
      "types": ["types.ts"]
    }
  },
  "exclude": ["dist"]
}
